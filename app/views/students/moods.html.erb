<script>
  function sendGetRequest() {
    // You can use JavaScript to construct the URL with the necessary parameters
    var mood = "happy";
    var student_id = <%= @student.id %>; // Assuming @student.id is available in the view
    var url = "/students?mood=" + encodeURIComponent(mood) + "&student_id=" + encodeURIComponent(student_id);

    // Perform a GET request
    window.location.href = url;
  }
</script>
